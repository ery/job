
<table class="table table-striped">
  <thead>
    <tr>
      <th>状态</th>
      <th>标题</th>
      <th>(自动)薪资</th>
      <th>(手动)薪资</th>
      <th>(手动)说明</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% subjects.each do |subject| %>
    <tr>
      <td><%= link_to draw_subject_status(subject), subject %></td>
      <td><%= link_to subject.title.to_s, subject %></td>
      <td><%= link_to subject.analyzed_salary.to_s, subject %></td>
      <td><%= link_to subject.manual_salary.to_s, subject %></td>
      <td><%= link_to subject.manual_memo.to_s, subject %></td>
      <td>
        <div class="btn-group">

          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              操作<span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to '打开', subject.url, :target => "_blank" %></li>
              <li><%= link_to '收件箱', putinbox_subject_path(subject), method: :put %></li>
              <li><%= link_to '忽略', ignore_subject_path(subject), method: :put %></li>
              <li><%= link_to '关注', care_subject_path(subject), method: :put %></li>
              <li><%= link_to '编辑', edit_subject_path(subject) %></li>
              <li><%= link_to '删除', subject, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
