
<% if topic.parent %>
<dl class="dl-horizontal">
  <dt>Parent:</dt>
  <dd><%= link_to topic.parent.title, topic.parent, :target => '_blank' %></dd>
</dl>
<% end %>

<dl class="dl-horizontal">
  <dt>标题:</dt>
  <dd><%= topic.title %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>发布时间:</dt>
  <dd><%= topic.analyzed_release_at_text %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>作者:</dt>
  <dd><%= link_to topic.analyzed_author, topic.analyzed_author_url, :target => '_blank' %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>网址:</dt>
  <dd><%= link_to topic.url, topic.url, :target => '_blank' %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>公司(手动):</dt>
  <dd><%= topic.manual_company %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>薪资(手动):</dt>
  <dd><%= topic.manual_salary %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>说明(手动):</dt>
  <dd><%= topic.manual_memo %></dd>
</dl>

<hr>

<dl class="dl-horizontal">
  <dt>公司(自动):</dt>
  <dd><%= topic.analyzed_company %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>薪资(自动):</dt>
  <dd><%= topic.analyzed_salary %></dd>
</dl>

<% if topic.children.count > 0%>
<%= render 'list', :topics => topic.children %>
<% end %>
