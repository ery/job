<%= draw_action_header %>

<%= render 'topic', :topic => @topic %>

<%= form_for(@topic, :html => {:role => "form"}) do |form| %>

<% if @topic.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>
  <ul>
    <% @topic.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= form.label :status, '状态' %><br>
  <%= form.select :status, Topic.status, {include_blank: false}, {:class => "form-control"} %>
</div>

<div class="form-group">
  <%= form.label :monthly_salary, '薪资(手动)' %><br>
  <%= form.text_field :manual_salary, :class => "form-control" %>
</div>

<div class="form-group">
  <%= form.label :manual_memo, '说明(手动)' %><br>
  <%= form.text_area :manual_memo, :class => "form-control" %>
</div>

<div class="well">
  <div class="btn-toolbar">
    <%= form.submit('Update', :class => "btn btn-default") %>
    <button type="button" class="btn btn-default"><%= link_to('Back', @topic) %></button>
  </div>
</div>

<% end %>
