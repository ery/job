<%= draw_action_header @topic.title %>

<%= render 'topic', :topic => @topic %>

<%= form_for(@topic, :html => {:role => "form"}) do |form| %>

<%= render './layouts/form_error', :object => @topic %>

<div class="form-group">
  <%= form.label :manual_salary, '薪资' %><br>
  <%= form.text_field :manual_salary, :class => "form-control" %>
</div>

<div class="form-group">
  <%= form.label :manual_company, '公司' %><br>
  <%= form.text_field :manual_company, :class => "form-control" %>
</div>

<div class="form-group">
  <%= form.label :manual_memo, '说明' %><br>
  <%= form.text_area :manual_memo, :class => "form-control" %>
</div>

<div class="well">
  <div class="btn-toolbar">
    <%= form.submit('Update', :class => "btn btn-default") %>
    <button type="button" class="btn btn-default"><%= link_to('Back', @topic) %></button>
  </div>
</div>

<% end %>
