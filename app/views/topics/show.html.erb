<%= draw_action_header @topic.title %>

<div class="well">
  <div class="btn-group">
    <%= draw_button_to '原贴', @topic.url, :target => "_blank" %>
    <%= draw_button_to '编辑', edit_topic_path(@topic) %>
  </div>

  <div class="btn-group">
    <% Tag.all.each do |tag| %>
    <%= draw_button_to tag.name, tag_topic_path(@topic, :tag => tag.name), method: :put %>
    <% end %>
  </div>
</div>

<%= render 'topic', :topic => @topic %>
