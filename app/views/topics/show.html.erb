<%= draw_action_header @topic.title %>

<div class="well">
  <div class="btn-group">
    <%= draw_button_to '原招聘贴', @topic.url, :target => "_blank" %>
    <%= draw_button_to '编辑', edit_topic_path(@topic) %>
    <%= draw_button_to '收件箱', inbox_topic_path(@topic), method: :put %>
    <%= draw_button_to '忽略', ignored_topic_path(@topic), method: :put %>
    <%= draw_button_to '关注', cared_topic_path(@topic), method: :put %>
  </div>
</div>

<%= render 'topic', :topic => @topic %>
