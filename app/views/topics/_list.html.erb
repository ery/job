
<table class="table table-striped">
  <thead>
    <tr>
      <th style="min-width:  80px;">状态</th>
      <th>标题</th>
      <th style="min-width:  80px;">月薪</th>
      <th style="min-width:  80px;">年薪</th>
      <th style="min-width: 280px;"></th>
    </tr>
  </thead>

  <tbody>
    <% topics.each do |topic| %>
    <tr>
      <td><%= link_to draw_topic_status(topic), topic %></td>
      <td><%= link_to topic.title, topic %></td>
      <td><%= link_to topic.monthly_salary.to_s, topic %></td>
      <td><%= link_to topic.annual_salary.to_s, topic %></td>
      <td>
        <div class="btn-group">

          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              操作<span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to '打开', topic.url, :target => "_blank" %></li>
              <li><%= link_to '收件箱', putinbox_topic_path(topic), method: :put %></li>
              <li><%= link_to '忽略', ignore_topic_path(topic), method: :put %></li>
              <li><%= link_to '关注', care_topic_path(topic), method: :put %></li>
              <li><%= link_to '编辑', edit_topic_path(topic) %></li>
              <li><%= link_to '删除', topic, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
