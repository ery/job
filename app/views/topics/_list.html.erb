
<table class="table table-striped">
  <thead>
    <tr>
      <th style="min-width: 40px;"></th>
      <th style="min-width: 80px;">公司</th>
      <th style="min-width: 80px;">发布时间</th>
      <th style="min-width: 80px;">作者</th>
      <th style="min-width: 80px;">标题</th>
    </tr>
  </thead>

  <tbody>
    <% topics.each do |topic| %>
    <tr>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to '查看', topic %></li>
            <li><%= link_to '编辑', edit_topic_path(topic) %></li>
            <li><%= link_to '原贴', topic.url, :target => "_blank" %></li>
          </ul>
        </div>
      </td>
      <td><%= link_to topic.analyzed_company.to_s, topic %></td>
      <td><%= link_to topic.analyzed_release_at_text, topic %></td>
      <td><%= link_to topic.analyzed_author.to_s, topic %></td>
      <td><%= link_to topic.title.to_s, topic %></td>
    </tr>
    <% end %>
  </tbody>
</table>
