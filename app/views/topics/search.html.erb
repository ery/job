<% if params[:key].blank? %>
  <%= draw_action_header "查找" %>
<% else %>
  <%= draw_action_header "查找到 #{@topics.count}个帖子" %>
<% end%>

<form class="navbar-form navbar-left" role="search">
  <div class="form-group">
    <input name='key' value="<%= params[:key]%>" placeholder="请输入关键字" type="text" class="form-control">
  </div>
  <button type="submit" class="btn btn-default">查找</button>
</form>

<%= render 'list', :topics => @topics %>
